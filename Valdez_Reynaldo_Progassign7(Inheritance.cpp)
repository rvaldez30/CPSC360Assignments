#include <iostream>
#include <string>
#include "Inheritance.h"

Acct::Acct(std::string nName, int aNumber, double bNumber){
	Owner_name = nName;
	AcctNum = aNumber;
	Balance = bNumber;
}

Acct::Acct(double bNum){
	Balance = bNumber;
}

CheckAcct::CheckAcct(double widt, double deposit, double bNumber, double CBal) : Acct(bNumber){
	double d;
	double w;
	d = deposit 
	w = widt
	double b;
	Balance2 = getBalance();
	if(d > 0){
		b = Balance2 + d;
		CBal = b;
		CBal2 = b;
		deposit = d;
		withdraw = 0;
	}
	if(w > 0){
		b = Balance2 + w;
		CBal2 = b;
		withdraw = w;
		CBal = b;
		deposit = 0;
	}

}

LAcct::LAcct(double interestR, double PBalance, double bNum) : Acct(bNum){
	IntR = interestR;
	double b;
	P_Balance = b - PBalance;
	double mint;
	double mint2;
	double Cal;
	mint2 = IntR / 12;
	mint = mint2 / 100;
	Cal = mint * b;
	CInt = Cal;
}
